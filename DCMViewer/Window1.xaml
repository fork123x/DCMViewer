<Window x:Class="DCMViewer.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Window1" Height="700" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="40"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="30" />
            </Grid.RowDefinitions>
            
            <Frame Grid.Row="0" x:Name="frame1">                
            </Frame>
        </Grid>

        <ListBox Grid.Column="1" BorderThickness="0"
             IsSynchronizedWithCurrentItem="True"
             Background="Transparent">
            <ListBoxItem>
                
                
                <Button Height="60" >
                    <Button.Content>
                        <TextBlock TextAlignment="Center">查询</TextBlock>
                    </Button.Content>
                </Button>
            </ListBoxItem>
            <ListBoxItem>
                <Button Content="看图" Height="60" />
            </ListBoxItem>
            <ListBoxItem>
                <Button Content="报告" Height="60"/>
            </ListBoxItem>
        </ListBox>
    </Grid>
</Window>
